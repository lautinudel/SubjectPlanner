<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLauncherLogo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="25dp"
            app:srcCompat="@mipmap/ic_drawer_foreground" />

        <TextView
            android:id="@+id/tvNombreApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="32dp"
            android:layout_marginTop="7dp"
            android:text="SubjectPlanner" />

        <TextView
            android:id="@+id/txVersionApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginTop="7dp"
            android:textColor="#05B69E"
            android:text="Versión 1.0" />

        <TextView
            android:id="@+id/tvDecripcionApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SubjectPlanner es una solucion sencilla para todo aquel estudiante universitario que requiera organizar su desempeño académico. Cuando el alumno se encuentra en situaciones en las que desconoce como gestionar sus tiempos de forma adecuada, SubjectPlanner le ayuda a salvar esos problemas mediante las integración de diversas funcionalidades dedicadas a ello."
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:text="Organizate. Preparate. Estudia. " />

        <TextView
            android:id="@+id/tvDesarrolladores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="50dp"
            android:text="{ }\n Desarrollado por\n Jean Pierre Saint Martin, Lautaro Nudel y Mateo Chamorro." />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>