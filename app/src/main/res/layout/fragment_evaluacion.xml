<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvaluacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TextInputLayoutNombreEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:id="@+id/edtNombreEvaluacion"
            android:drawableStart="@drawable/ic_playlist_add_black_24dp"
            android:drawableLeft="@drawable/ic_playlist_add_black_24dp"
            android:drawablePadding="12dp"
            />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TextInputLayoutFechaEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:id="@+id/edtFechaEvaluacion"
            android:focusableInTouchMode="false"
            android:drawableStart="@drawable/ic_date_range_black_24dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="12dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TextInputLayoutHoraEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora"
            android:id="@+id/edtHoraEvaluacion"
            android:focusableInTouchMode="false"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:drawablePadding="12dp"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/TextInputLayoutNotaPromEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtNotaPromocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nota promociÃ³n"
            android:inputType="number"
            android:drawableStart="@drawable/ic_sentiment_satisfied_black_24dp"
            android:drawableLeft="@drawable/ic_sentiment_satisfied_black_24dp"
            android:drawablePadding="12dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/TextInputLayoutNotaRegEv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtNotaRegularidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nota regularidad"
            android:inputType="number"
            android:drawableStart="@drawable/ic_sentiment_neutral_black_24dp"
            android:drawableLeft="@drawable/ic_sentiment_neutral_black_24dp"
            android:drawablePadding="12dp"/>
        </android.support.design.widget.TextInputLayout>

        <Switch
            android:id="@+id/swtAvisarEvaluacion"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/Avisar"
            android:drawableLeft="@drawable/ic_alarm_on_black_24dp"
            android:drawableStart="@drawable/ic_alarm_on_black_24dp"
            android:drawablePadding="12dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/btnGuardarEvaluacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR" />

    </LinearLayout>
</FrameLayout>