<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EvaluacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre evaluaci贸n"
            android:id="@+id/edtNombreEvaluacion"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha evaluaci贸n"
            android:id="@+id/edtFechaEvaluacion"
            android:focusableInTouchMode="false"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora evaluaci贸n"
            android:id="@+id/edtHoraEvaluacion"
            android:focusableInTouchMode="false"/>

        <EditText
            android:id="@+id/edtNotaPromocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nota promoci贸n"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtNotaRegularidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nota regularidad"
            android:inputType="number" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Switch
                android:id="@+id/swtAvisarEvaluacion"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="@string/Avisar" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GUARDAR"
                android:id="@+id/btnGuardarEvaluacion"/>


        </LinearLayout>


    </LinearLayout>


</FrameLayout>